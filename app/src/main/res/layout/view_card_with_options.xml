<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/spacing_medium"
    android:layout_marginStart="@dimen/spacing_medium"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="@dimen/button_edit_width"
            android:layout_height="@dimen/button_edit_width"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/spacing_xmedium"
            android:backgroundTint="@color/background_gray01"
            android:contentDescription="@string/text_accessibility_edit_graph"
            app:srcCompat="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="@dimen/button_edit_width"
            android:layout_height="@dimen/button_edit_width"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/red_pastel"
            android:contentDescription="@string/text_accessibility_delete_graph"
            app:srcCompat="@drawable/ic_delete" />

    </LinearLayout>

    <include layout="@layout/view_card" />

</com.daimajia.swipe.SwipeLayout>